{
    "name": "@cartesi/subgraph-rollups",
    "version": "0.1.0",
    "description": "Cartesi Rollups Subgraph",
    "main": "index.js",
    "author": "Danilo Tuler <danilo.tuler@cartesi.io>",
    "license": "Apache-2.0",
    "scripts": {
        "codegen": "graph codegen",
        "clean": "rimraf abi/**/*.json && rimraf build && rimraf generated",
        "build": "graph build",
        "create:localhost": "graph create --node http://localhost:8020/ cartesi/rollups",
        "remove:localhost": "graph remove --node http://localhost:8020/ cartesi/rollups",
        "deploy:localhost": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 cartesi/rollups subgraph.localhost.yaml",
        "deploy:mainnet": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ cartesi/rollups",
        "deploy:mainnet-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 cartesi/rollups subgraph.yaml",
        "deploy:mainnet-staging": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ cartesi/rollups-staging",
        "deploy:goerli": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ cartesi/rollups-goerli subgraph.goerli.yaml",
        "deploy:goerli-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 cartesi/rollups subgraph.goerli.yaml",
        "prepare:localhost": "hardhat --network localhost subgraph --input-file subgraph.template.yaml --output-file subgraph.localhost.yaml",
        "prepare:goerli": "hardhat --network goerli subgraph --input-file subgraph.template.yaml --output-file subgraph.goerli.yaml",
        "prepare:mainnet": "hardhat --network mainnet subgraph",
        "prettier": "prettier --check **/*.ts",
        "test": "graph test"
    },
    "dependencies": {
        "@cartesi/rollups": "^0.6.0",
        "@graphprotocol/graph-cli": "^0.34.0",
        "@graphprotocol/graph-ts": "^0.28.0"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.1.1",
        "ethers": "^5.7.1",
        "hardhat": "^2.11.2",
        "hardhat-deploy": "^0.11.15",
        "matchstick-as": "^0.5.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3"
    }
}
